@model bibGest.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
    Layout = "_Layout";
}

<div class="row justify-content-center" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4 d-flex align-items-center">
        <div class="w-100">
            <!-- Logo -->
            <div class="text-center mb-4">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3" 
                     style="width: 80px; height: 80px; background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);">
                    <i class="bi bi-book-half text-white" style="font-size: 2.5rem;"></i>
                </div>
                <h3 class="fw-bold">Connexion</h3>
                <p class="text-muted">Bienvenue sur BibGest</p>
            </div>
            
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-1"></i>Adresse email
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" 
                                   placeholder="votre@email.com" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock me-1"></i>Mot de passe
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg" 
                                   placeholder="••••••••" autocomplete="current-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label small">Se souvenir de moi</label>
                            </div>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <p class="text-muted">
                    Pas encore de compte ? 
                    <a asp-action="Register" class="fw-medium text-decoration-none">Créer un compte</a>
                </p>
            </div>
            
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-muted small text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i>Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
