<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibGest</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bibGest.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-2" 
                         style="width: 36px; height: 36px;">
                        <i class="bi bi-book-half"></i>
                    </div>
                    <span>BibGest</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Catalog" asp-action="Index">
                                <i class="bi bi-grid-3x3-gap me-1"></i>Catalogue
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i>Mon Espace
                                </a>
                            </li>
                            
                            @if (User.IsInRole("Bibliothecaire") || User.IsInRole("Administrateur"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear me-1"></i>Gestion
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-start shadow-lg">
                                        <li class="px-2 py-1">
                                            <span class="dropdown-header text-uppercase small fw-bold text-muted">Bibliothèque</span>
                                        </li>
                                        <li><a class="dropdown-item" asp-controller="Livres" asp-action="Index">
                                            <i class="bi bi-book me-2 text-primary"></i>Livres
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Emprunts" asp-action="Index">
                                            <i class="bi bi-arrow-left-right me-2 text-info"></i>Emprunts
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Reservations" asp-action="Index">
                                            <i class="bi bi-bookmark me-2 text-warning"></i>Réservations
                                        </a></li>
                                        @if (User.IsInRole("Administrateur"))
                                        {
                                            <li><hr class="dropdown-divider my-2"></li>
                                            <li class="px-2 py-1">
                                                <span class="dropdown-header text-uppercase small fw-bold text-muted">Administration</span>
                                            </li>
                                            <li><a class="dropdown-item" asp-controller="Utilisateurs" asp-action="Index">
                                                <i class="bi bi-people me-2 text-success"></i>Utilisateurs
                                            </a></li>
                                            <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                                <i class="bi bi-tags me-2 text-secondary"></i>Catégories
                                            </a></li>
                                            <li><a class="dropdown-item" asp-controller="Penalites" asp-action="Index">
                                                <i class="bi bi-exclamation-circle me-2 text-danger"></i>Pénalités
                                            </a></li>
                                        }
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    
                    <!-- Search Form -->
                    <form class="d-none d-lg-flex me-3" asp-controller="Catalog" asp-action="Index" method="get">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" name="search" class="form-control bg-white border-start-0 ps-0" 
                                   placeholder="Rechercher un livre..." style="min-width: 200px;" />
                        </div>
                    </form>
                    
                    <!-- User Menu -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <div class="avatar bg-white text-primary me-2" style="width: 32px; height: 32px; font-size: 0.75rem;">
                                        @User.Identity.Name?.Substring(0, Math.Min(2, User.Identity.Name?.Length ?? 0)).ToUpper()
                                    </div>
                                    <span class="d-none d-lg-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg">
                                    <li class="px-3 py-2">
                                        <div class="fw-bold">@User.Identity.Name</div>
                                        <small class="text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                                    </li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-2 text-primary"></i>Tableau de bord
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person me-2 text-secondary"></i>Mon profil
                                    </a></li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-2">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger rounded">
                                                <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Connexion
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-light btn-sm px-3" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>S'inscrire
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 py-4">
        <div class="container-fluid px-4">
            <!-- Toast Notifications -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @RenderBody()
        </div>
    </main>

    <footer class="py-4">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center text-white">
                        <div class="bg-white bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" 
                             style="width: 40px; height: 40px;">
                            <i class="bi bi-book-half text-white"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">BibGest</h6>
                            <small class="text-white-50">Système de gestion de bibliothèque</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <small class="text-white-50">&copy; @DateTime.Now.Year BibGest. Tous droits réservés.</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
