@model bibGest.Models.Emprunt

@{
    ViewData["Title"] = "Nouvel emprunt";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Nouvel emprunt</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="LivreId" class="form-label"><i class="bi bi-book me-1"></i>Livre *</label>
                        <select asp-for="LivreId" class="form-select" asp-items="ViewBag.LivreId">
                            <option value="">-- Sélectionnez un livre --</option>
                        </select>
                        <span asp-validation-for="LivreId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="UtilisateurId" class="form-label"><i class="bi bi-person me-1"></i>Emprunteur *</label>
                        <select asp-for="UtilisateurId" class="form-select" asp-items="ViewBag.UtilisateurId">
                            <option value="">-- Sélectionnez un utilisateur --</option>
                        </select>
                        <span asp-validation-for="UtilisateurId" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateRetourPrevue" class="form-label"><i class="bi bi-calendar-event me-1"></i>Retour prévu *</label>
                            <input asp-for="DateRetourPrevue" class="form-control" type="date" />
                            <span asp-validation-for="DateRetourPrevue" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateRetourReelle" class="form-label"><i class="bi bi-calendar-check me-1"></i>Retour réel</label>
                            <input asp-for="DateRetourReelle" class="form-control" type="date" />
                            <span asp-validation-for="DateRetourReelle" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Statut" class="form-label"><i class="bi bi-flag me-1"></i>Statut</label>
                        <select asp-for="Statut" class="form-select">
                            <option value="0">En cours</option>
                            <option value="1">Retourné</option>
                            <option value="2">En retard</option>
                        </select>
                        <span asp-validation-for="Statut" class="text-danger"></span>
                    </div>
                    
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-2"></i>Créer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
