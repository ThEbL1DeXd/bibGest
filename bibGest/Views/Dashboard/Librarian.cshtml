@model bibGest.ViewModels.LibrarianDashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord Bibliothécaire";
}

<!-- Page Header -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
    <div class="mb-3 mb-md-0">
        <h2 class="fw-bold mb-1">
            <i class="bi bi-speedometer2 text-primary me-2"></i>Tableau de bord
        </h2>
        <p class="text-muted mb-0">Gestion de la bibliothèque</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-controller="Emprunts" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nouvel emprunt
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="display-6 fw-bold">@Model.TotalBooks</div>
                    <div class="opacity-75 small">Livres au total</div>
                </div>
                <i class="bi bi-book stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat stat-info">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="display-6 fw-bold">@Model.ActiveLoans</div>
                    <div class="opacity-75 small">Emprunts actifs</div>
                </div>
                <i class="bi bi-arrow-left-right stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat stat-danger">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="display-6 fw-bold">@Model.OverdueLoans</div>
                    <div class="opacity-75 small">En retard</div>
                </div>
                <i class="bi bi-exclamation-triangle stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="dashboard-stat stat-warning">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="display-6 fw-bold">@Model.PendingReservations</div>
                    <div class="opacity-75 small">Réservations</div>
                </div>
                <i class="bi bi-bookmark stat-icon"></i>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Overdue Loans -->
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-exclamation-circle text-danger me-2"></i>Emprunts en retard
                </h5>
                <span class="badge bg-danger rounded-pill">@Model.OverdueLoans</span>
            </div>
            <div class="card-body p-0">
                @if (Model.OverdueLoansList.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Membre</th>
                                    <th>Livre</th>
                                    <th>Retard</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var loan in Model.OverdueLoansList.Take(5))
                                {
                                    var daysOverdue = (DateTime.Now - loan.DateRetourPrevue).Days;
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar bg-danger bg-opacity-10 text-danger me-2">
                                                    @loan.Utilisateur?.Prenom?.Substring(0, 1)@loan.Utilisateur?.Nom?.Substring(0, 1)
                                                </div>
                                                <div>
                                                    <div class="fw-medium small">@loan.Utilisateur?.Prenom @loan.Utilisateur?.Nom</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <small class="text-truncate" style="max-width: 150px; display: block;">
                                                @loan.Livre?.Titre
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge bg-danger">@daysOverdue j.</span>
                                        </td>
                                        <td>
                                            <a asp-controller="Emprunts" asp-action="Edit" asp-route-id="@loan.EmpruntId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 2.5rem;"></i>
                        <p class="text-muted mt-2 mb-0">Aucun emprunt en retard ??</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Pending Reservations -->
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-bookmark text-warning me-2"></i>Réservations en attente
                </h5>
                <span class="badge bg-warning text-dark rounded-pill">@Model.PendingReservations</span>
            </div>
            <div class="card-body p-0">
                @if (Model.PendingReservationsList.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Membre</th>
                                    <th>Livre</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var res in Model.PendingReservationsList.Take(5))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar bg-warning bg-opacity-10 text-warning me-2">
                                                    @res.Utilisateur?.Prenom?.Substring(0, 1)@res.Utilisateur?.Nom?.Substring(0, 1)
                                                </div>
                                                <small class="fw-medium">@res.Utilisateur?.Prenom @res.Utilisateur?.Nom</small>
                                            </div>
                                        </td>
                                        <td>
                                            <small class="text-truncate" style="max-width: 150px; display: block;">
                                                @res.Livre?.Titre
                                            </small>
                                        </td>
                                        <td>
                                            <small class="text-muted">@res.DateReservation.ToString("dd/MM")</small>
                                        </td>
                                        <td>
                                            <a asp-controller="Reservations" asp-action="Edit" asp-route-id="@res.ReservationId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center">
                        <i class="bi bi-inbox text-muted" style="font-size: 2.5rem;"></i>
                        <p class="text-muted mt-2 mb-0">Aucune réservation en attente</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Recent Loans -->
<div class="card mt-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold">
            <i class="bi bi-clock-history text-primary me-2"></i>Emprunts récents
        </h5>
        <a asp-controller="Emprunts" asp-action="Index" class="btn btn-sm btn-outline-primary">
            Voir tout <i class="bi bi-arrow-right ms-1"></i>
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Membre</th>
                        <th>Livre</th>
                        <th>Date emprunt</th>
                        <th>Retour prévu</th>
                        <th>Statut</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loan in Model.RecentLoans)
                    {
                        var isOverdue = loan.DateRetourReelle == null && loan.DateRetourPrevue < DateTime.Now;
                        var isReturned = loan.DateRetourReelle != null;
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-primary bg-opacity-10 text-primary me-2">
                                        @loan.Utilisateur?.Prenom?.Substring(0, 1)@loan.Utilisateur?.Nom?.Substring(0, 1)
                                    </div>
                                    <div class="fw-medium">@loan.Utilisateur?.Prenom @loan.Utilisateur?.Nom</div>
                                </div>
                            </td>
                            <td>@loan.Livre?.Titre</td>
                            <td><small>@loan.DateEmprunt.ToString("dd/MM/yyyy")</small></td>
                            <td><small>@loan.DateRetourPrevue.ToString("dd/MM/yyyy")</small></td>
                            <td>
                                @if (isReturned)
                                {
                                    <span class="badge bg-success">Retourné</span>
                                }
                                else if (isOverdue)
                                {
                                    <span class="badge bg-danger">En retard</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">En cours</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-controller="Emprunts" asp-action="Edit" asp-route-id="@loan.EmpruntId" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
