@model IEnumerable<bibGest.Models.Reservation>
@{
    ViewData["Title"] = "Mes Réservations";
}

<div class="container">
    <h2 class="mb-4"><i class="bi bi-bookmark me-2"></i>Mes réservations</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Livre</th>
                                <th>Auteur</th>
                                <th>Date de réservation</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Catalog" asp-action="Details" asp-route-id="@reservation.LivreId">
                                            @reservation.Livre?.Titre
                                        </a>
                                    </td>
                                    <td>@reservation.Livre?.Auteur</td>
                                    <td>@reservation.DateReservation.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @switch (reservation.Statut)
                                        {
                                            case "EnAttente":
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-hourglass-split me-1"></i>En attente
                                                </span>
                                                break;
                                            case "Confirmee":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Confirmée
                                                </span>
                                                break;
                                            case "Annulee":
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-x-circle me-1"></i>Annulée
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-info">@reservation.Statut</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (reservation.Statut == "EnAttente")
                                        {
                                            <form asp-action="CancelReservation" asp-route-id="@reservation.ReservationId" method="post" 
                                                  style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?')">
                                                    <i class="bi bi-x-circle me-1"></i>Annuler
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-bookmark-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">Aucune réservation</h4>
            <p class="text-muted">Vous n'avez pas de réservation en cours</p>
            <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-search me-2"></i>Parcourir le catalogue
            </a>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Member" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour au tableau de bord
        </a>
    </div>
</div>
