@model IEnumerable<bibGest.Models.Emprunt>
@{
    ViewData["Title"] = "Historique de lecture";
}

<div class="container">
    <h2 class="mb-4"><i class="bi bi-clock-history me-2"></i>Mon historique de lecture</h2>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var loan in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(loan.Livre?.ImageUrl))
                        {
                            <img src="@loan.Livre.ImageUrl" class="card-img-top" alt="@loan.Livre.Titre" 
                                 style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-book text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h6 class="card-title">@loan.Livre?.Titre</h6>
                            <p class="card-text text-muted small">@loan.Livre?.Auteur</p>
                            <div class="small text-muted">
                                <p class="mb-1">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    Emprunté: @loan.DateEmprunt.ToString("dd/MM/yyyy")
                                </p>
                                <p class="mb-0">
                                    <i class="bi bi-calendar-check me-1"></i>
                                    Retourné: @loan.DateRetourReelle?.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-controller="Catalog" asp-action="Details" asp-route-id="@loan.LivreId" 
                               class="btn btn-outline-primary btn-sm w-100">
                                <i class="bi bi-eye me-1"></i>Voir le livre
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-journal-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">Aucun livre lu</h4>
            <p class="text-muted">Votre historique de lecture est vide</p>
            <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-search me-2"></i>Découvrir le catalogue
            </a>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Member" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour au tableau de bord
        </a>
    </div>
</div>
