@model IEnumerable<bibGest.Models.Category>

@{
    ViewData["Title"] = "Gestion des Catégories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-tags me-2"></i>Gestion des Catégories</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Ajouter une catégorie
    </a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                             style="width: 50px; height: 50px;">
                            <i class="bi bi-tag" style="font-size: 1.5rem;"></i>
                        </div>
                        <h5 class="card-title mb-0">@item.NomCategorie</h5>
                    </div>
                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <p class="card-text text-muted small">@item.Description</p>
                    }
                    else
                    {
                        <p class="card-text text-muted small fst-italic">Aucune description</p>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <div class="btn-group btn-group-sm w-100">
                        <a asp-action="Details" asp-route-id="@item.CategorieId" class="btn btn-outline-info">
                            <i class="bi bi-eye me-1"></i>Détails
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.CategorieId" class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-1"></i>Modifier
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CategorieId" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Suppr.
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-tags text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3">Aucune catégorie</h4>
        <p class="text-muted">Commencez par créer une catégorie pour organiser vos livres.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Créer une catégorie
        </a>
    </div>
}
