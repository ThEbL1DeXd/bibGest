@model IEnumerable<bibGest.Models.Livre>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnneePublication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantiteTotale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantiteDisponible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnneePublication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantiteTotale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantiteDisponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie.CategorieId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LivreId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LivreId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LivreId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
