@model bibGest.ViewModels.CatalogViewModel
@{
    ViewData["Title"] = "Catalogue";
}

<!-- Page Header -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
    <div class="mb-3 mb-md-0">
        <h2 class="fw-bold mb-1">
            <i class="bi bi-grid-3x3-gap text-primary me-2"></i>Catalogue des livres
        </h2>
        <p class="text-muted mb-0">Découvrez notre collection de livres</p>
    </div>
    <div class="text-muted">
        <i class="bi bi-book me-1"></i>@Model.Books.Count livre(s) trouvé(s)
    </div>
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body p-3">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label small fw-medium text-muted">
                        <i class="bi bi-search me-1"></i>Rechercher
                    </label>
                    <input type="text" name="search" class="form-control" 
                           placeholder="Titre, auteur ou ISBN..." 
                           value="@Model.SearchTerm" />
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-medium text-muted">
                        <i class="bi bi-tag me-1"></i>Catégorie
                    </label>
                    <select name="categoryId" class="form-select">
                        <option value="">Toutes les catégories</option>
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat.CategorieId" selected="@(Model.CategoryId == cat.CategorieId)">
                                @cat.NomCategorie
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel me-2"></i>Filtrer
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Category Pills -->
<div class="mb-4">
    <div class="d-flex flex-wrap gap-2">
        <a asp-action="Index" class="btn @(Model.CategoryId == null ? "btn-primary" : "btn-outline-secondary") btn-sm rounded-pill px-3">
            <i class="bi bi-grid me-1"></i>Tous
        </a>
        @foreach (var cat in Model.Categories.Take(8))
        {
            <a asp-action="Index" asp-route-categoryId="@cat.CategorieId" 
               class="btn @(Model.CategoryId == cat.CategorieId ? "btn-primary" : "btn-outline-secondary") btn-sm rounded-pill px-3">
                @cat.NomCategorie
            </a>
        }
    </div>
</div>

<!-- Books Grid -->
@if (Model.Books.Any())
{
    <div class="row g-4">
        @foreach (var item in Model.Books)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <div class="card book-card h-100 position-relative">
                    <!-- Book Cover -->
                    <a asp-action="Details" asp-route-id="@item.Book.LivreId" class="text-decoration-none">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(item.Book.ImageUrl))
                            {
                                <img src="@item.Book.ImageUrl" class="card-img-top" alt="@item.Book.Titre" 
                                     style="height: 220px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-gradient d-flex align-items-center justify-content-center" 
                                     style="height: 220px; background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);">
                                    <i class="bi bi-book text-secondary" style="font-size: 4rem; opacity: 0.5;"></i>
                                </div>
                            }
                            <!-- Availability Badge -->
                            <span class="position-absolute top-0 end-0 m-2 badge @(item.IsAvailable ? "bg-success" : "bg-danger") rounded-pill">
                                @if (item.IsAvailable)
                                {
                                    <i class="bi bi-check-circle me-1"></i><text>Dispo</text>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle me-1"></i><text>Épuisé</text>
                                }
                            </span>
                        </div>
                    </a>
                    
                    <!-- Book Info -->
                    <div class="card-body p-3">
                        <a asp-action="Details" asp-route-id="@item.Book.LivreId" class="text-decoration-none">
                            <h6 class="card-title fw-bold text-dark mb-1 text-truncate" title="@item.Book.Titre">
                                @item.Book.Titre
                            </h6>
                        </a>
                        <p class="card-text text-muted small mb-2 text-truncate">@item.Book.Auteur</p>
                        
                        @if (item.Book.Categorie != null)
                        {
                            <span class="badge bg-light text-dark small">@item.Book.Categorie.NomCategorie</span>
                        }
                    </div>
                    
                    <!-- Card Footer -->
                    <div class="card-footer bg-transparent border-top-0 p-3 pt-0">
                        @if (item.IsBorrowedByCurrentUser)
                        {
                            <span class="badge bg-info w-100 py-2">
                                <i class="bi bi-book me-1"></i>Emprunté
                            </span>
                        }
                        else if (item.IsReservedByCurrentUser)
                        {
                            <span class="badge bg-warning w-100 py-2">
                                <i class="bi bi-bookmark-check me-1"></i>Réservé
                            </span>
                        }
                        else if (!item.IsAvailable && User.Identity?.IsAuthenticated == true)
                        {
                            <form asp-action="Reserve" asp-route-id="@item.Book.LivreId" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning btn-sm w-100">
                                    <i class="bi bi-bookmark-plus me-1"></i>Réserver
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-action="Details" asp-route-id="@item.Book.LivreId" class="btn btn-outline-primary btn-sm w-100">
                                <i class="bi bi-eye me-1"></i>Voir détails
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Pagination" class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-categoryId="@Model.CategoryId">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@i"
                           asp-route-search="@Model.SearchTerm"
                           asp-route-categoryId="@Model.CategoryId">
                            @i
                        </a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-categoryId="@Model.CategoryId">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="empty-state">
        <i class="bi bi-search empty-icon"></i>
        <h4>Aucun livre trouvé</h4>
        <p class="text-muted">Essayez de modifier vos critères de recherche</p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-counterclockwise me-2"></i>Réinitialiser les filtres
        </a>
    </div>
}
