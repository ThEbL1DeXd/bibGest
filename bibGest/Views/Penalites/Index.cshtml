@model IEnumerable<bibGest.Models.Penalite>

@{
    ViewData["Title"] = "Gestion des Pénalités";
    var totalAmount = Model.Sum(p => p.Montant);
    var unpaidAmount = Model.Where(p => !p.EstPayee).Sum(p => p.Montant);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-exclamation-circle me-2"></i>Gestion des Pénalités</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Nouvelle pénalité
    </a>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">@Model.Count()</h4>
                    <small>Total pénalités</small>
                </div>
                <i class="bi bi-list-ul" style="font-size: 2rem;"></i>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">@unpaidAmount.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</h4>
                    <small>Impayées</small>
                </div>
                <i class="bi bi-exclamation-triangle" style="font-size: 2rem;"></i>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">@(totalAmount - unpaidAmount).ToString("C", new System.Globalization.CultureInfo("fr-FR"))</h4>
                    <small>Payées</small>
                </div>
                <i class="bi bi-check-circle" style="font-size: 2rem;"></i>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Emprunt</th>
                        <th>Montant</th>
                        <th>Date de création</th>
                        <th>Statut</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Emprunts" asp-action="Details" asp-route-id="@item.EmpruntId">
                                    <i class="bi bi-link-45deg me-1"></i>Emprunt #@item.EmpruntId
                                </a>
                                @if (item.Emprunt?.Livre != null)
                                {
                                    <br><small class="text-muted">@item.Emprunt.Livre.Titre</small>
                                }
                            </td>
                            <td>
                                <strong class="@(item.EstPayee ? "text-success" : "text-danger")">
                                    @item.Montant.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                                </strong>
                            </td>
                            <td>
                                <i class="bi bi-calendar me-1"></i>
                                @item.DateCreation.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @if (item.EstPayee)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Payée
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle me-1"></i>Impayée
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.PenaliteId" class="btn btn-outline-info" title="Détails">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.PenaliteId" class="btn btn-outline-primary" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PenaliteId" class="btn btn-outline-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
