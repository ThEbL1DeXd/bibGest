@model bibGest.Models.Penalite

@{
    ViewData["Title"] = "Nouvelle pénalité";
}

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-circle me-2"></i>Nouvelle pénalité</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="EmpruntId" class="form-label"><i class="bi bi-arrow-left-right me-1"></i>Emprunt concerné *</label>
                        <select asp-for="EmpruntId" class="form-select" asp-items="ViewBag.EmpruntId">
                            <option value="">-- Sélectionnez un emprunt --</option>
                        </select>
                        <span asp-validation-for="EmpruntId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Montant" class="form-label"><i class="bi bi-currency-euro me-1"></i>Montant (€) *</label>
                        <div class="input-group">
                            <input asp-for="Montant" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" autocomplete="off" />
                            <span class="input-group-text">€</span>
                        </div>
                        <span asp-validation-for="Montant" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="EstPayee" />
                        <label asp-for="EstPayee" class="form-check-label">
                            <i class="bi bi-check-circle me-1"></i>Pénalité payée
                        </label>
                    </div>
                    
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-check-lg me-2"></i>Créer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
