@model bibGest.Models.Reservation

@{
    ViewData["Title"] = "Modifier la réservation";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Modifier la réservation</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="ReservationId" />
                    
                    <div class="mb-3">
                        <label asp-for="LivreId" class="form-label"><i class="bi bi-book me-1"></i>Livre *</label>
                        <select asp-for="LivreId" class="form-select" asp-items="ViewBag.LivreId">
                            <option value="">-- Sélectionnez un livre --</option>
                        </select>
                        <span asp-validation-for="LivreId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="UtilisateurId" class="form-label"><i class="bi bi-person me-1"></i>Demandeur *</label>
                        <select asp-for="UtilisateurId" class="form-select" asp-items="ViewBag.UtilisateurId">
                            <option value="">-- Sélectionnez un utilisateur --</option>
                        </select>
                        <span asp-validation-for="UtilisateurId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DateReservation" class="form-label"><i class="bi bi-calendar me-1"></i>Date de réservation</label>
                        <input asp-for="DateReservation" class="form-control" type="datetime-local" readonly />
                        <span asp-validation-for="DateReservation" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Statut" class="form-label"><i class="bi bi-flag me-1"></i>Statut</label>
                        <select asp-for="Statut" class="form-select">
                            <option value="EnAttente">En Attente</option>
                            <option value="Confirmee">Confirmée</option>
                            <option value="Annulee">Annulée</option>
                        </select>
                        <span asp-validation-for="Statut" class="text-danger"></span>
                    </div>
                    
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
